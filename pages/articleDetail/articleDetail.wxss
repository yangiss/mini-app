/* pages/articleDetail/articleDetail.wxss */

.container{
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx;
}
.title-container{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 50rpx;
  font-weight: 700;
  color: #333;
}
.authorAndDate{
  color: #ccc;
  font-size: 28rpx;
  /* margin-bottom: 40rpx; */
}


/*  */
.media-container{
  /* height: 480rpx; */
  display: flex;
  justify-content: center;
}

.media-container swiper {
  width: 100%;
  height: 480rpx;
}
.media-container swiper image{
  width: 100%;
}
.content-container{
  margin-top: 30rpx;
  text-indent: 2em;
}
.content-container text{
  font-size: 32rpx;
  line-height: 32rpx;
}

.read-container {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.read-container text{
  font-size: 14px;
  margin-right: 20rpx;
}

.video{
  width: 700rpx;
  height: 500rpx;
}
.controls{
  position: relative;
  width: 700rpx;
  height: 500rpx;
  background-color: red;
}
.controls-box{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 50%;
  left: 50%;
  margin-top: -50rpx ;
  margin-left: -50rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, .6);
  border-radius: 50%;
}
.controls-box cover-image {
  width: 30rpx;
  height: 30rpx;

}
.controls-box cover-view{
  font-size: 28rpx;
}


.audio-container{
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fdfdfd;
  border: 1px solid #f2f2f2;
  border-radius: 4rpx;
}
.audio-controler{
  margin-right: 40rpx;
}
.audio-controler image{
  width: 80rpx;
  height: 80rpx;
}
.audio-title text{
  font-size: 36rpx;
}
.audio-from text{
  font-size: 28rpx;
  color: #666;
}
.audio-progress {
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 520rpx;
}
.progress-circle{
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #00b26a;
}
.audio-time{
  display: flex;
  justify-content: space-between;
}
.audio-time text{
  font-size: 24rpx;
  color: #999;
}